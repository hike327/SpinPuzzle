<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="368dp"
        android:layout_height="360dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlayerField"
        app:rowCount="3">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:onClick="tapper"
            android:padding="1dp"
            android:tag="row1col1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:onClick="tapper"
            android:padding="1dp"
            android:tag="row1col2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:onClick="tapper"
            android:padding="1dp"
            android:tag="row1col3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:onClick="tapper"
            android:padding="1dp"
            android:tag="row2col1" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:onClick="tapper"
            android:padding="1dp"
            android:tag="row2col2" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:onClick="tapper"
            android:padding="1dp"
            android:tag="row2col3" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:onClick="tapper"
            android:padding="1dp"
            android:tag="row3col1" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:onClick="tapper"
            android:padding="1dp"
            android:tag="row3col2" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:onClick="tapper"
            android:padding="1dp"
            android:tag="row3col3" />
    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/PlayerField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Player 1"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/SecondLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="nextPlay"
            android:text="Play" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>